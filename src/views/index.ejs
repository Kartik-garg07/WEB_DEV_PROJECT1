<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>card</title>
    <link rel="stylesheet" href="/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <nav class="main-navbar">
        <span class="navbar-title">Welcome to your new E-commerce stop</span>
        <form action="/" method="get" class="navbar-search">
            <input type="text" name="search" placeholder="Search products..." value="<%= typeof search !== 'undefined' ? search : '' %>">
            <button type="submit">
                <i class="fas fa-search"></i>
            </button>
            <a href="/cart" class="cart-link">
                <i class="fas fa-shopping-cart"></i>
            </a>
        </form>
    </nav>
    <div id="cart-icon" onclick="window.location.href='/cart'">
  ðŸ›’ <span id="cart-count">0</span>
    </div>
        <% if (email === "Kartik@gmail.com") { %>
        <div style="width:100%; display:flex; justify-content:flex-end; margin: 18px 0;">
            <a href="/products" style="background: #1ecbe1; color: #fff; padding: 10px 18px; border-radius: 8px; text-decoration: none; font-weight: 500; box-shadow: 0 2px 8px rgba(30,203,225,0.12); transition: background 0.2s;">
                <i class="fas fa-plus"></i> Add Product
            </a>
        </div>
    <% } %>

    <div class="container">
        <% 
            let filteredProducts = products;
            if (typeof search !== 'undefined' && search.trim() !== '') {
                filteredProducts = products.filter(p => 
                    p.title.toLowerCase() === search.trim().toLowerCase()
                );
            }
            filteredProducts.forEach(function(elem) { 
        %>
            <a href="/products/<%= elem._id %>" style="text-decoration:none; color:inherit;">
                <div class="card">
                    <div class="top">
                        <img src="<%= elem.image %>" alt="image">
                    </div>
                    <div class="bottom">
                        <h3><%= elem.title %></h3>
                        <p><%= elem.description %></p>
                        <p><%= elem.price %></p>
                        <% if (email === "Kartik@gmail.com") { %>
                            <button><a href="/products/update/<%= elem._id %>">Update</a></button>
                            <button><a href="/products/delete/<%= elem._id %>">Delete</a></button>
                        <% } else { %>
                            <button><a href="/products/buy/<%= elem._id %>">Buy Now</a></button>
                            <button><a href="/products/add-to-cart/<%= elem._id %>">Add to Cart</a></button>
                        <% } %>
                    </div>
                </div>
            </a>
        <% }); %>
    </div>


</body>
</html>



